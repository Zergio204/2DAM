<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <Spinner
        android:id="@+id/sp_SelectorCafe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/cafes"
        android:minHeight="32dp" />

    <CheckBox
        android:id="@+id/cb_Azucar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/extra_azucar" />

    <Switch
        android:id="@+id/sw_OnOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:text="@string/on" />

    <TextView
        android:id="@+id/tv_Recaudado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/b_ServirCafe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/servir_caf" />

    <TextView
        android:id="@+id/tv_CafeServido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>