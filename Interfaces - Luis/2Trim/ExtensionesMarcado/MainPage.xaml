<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ExtensionesMarcado"
                xmlns:sys="clr-namespace:System;assembly=netstandard"
             x:Name="pageName"
             x:Class="ExtensionesMarcado.MainPage">

    <ContentPage.Resources>
        <LayoutOptions x:Key="horzOptions"
                       Alignment="Center" />
        <LayoutOptions x:Key="vertOptions"
                       Alignment="Center" />
        <x:Double x:Key="borderWidth">3</x:Double>
        <x:Double x:Key="rotationAngle">-15</x:Double>
        <x:Double x:Key="fontSize">24</x:Double>
        <OnPlatform x:Key="textColor"
                    x:TypeArguments="Color">
            <On Platform="iOS" Value="Red" />
            <On Platform="Android" Value="Aqua" />
            <On Platform="WinUI" Value="Green" />
        </OnPlatform>
        <OnPlatform x:Key="margenes"
                    x:TypeArguments="Thickness">
            <On Platform="iOS" Value="30,60,30,30" />
            <On Platform="Android" Value="20" />
            <On Platform="WinUI" Value="20" />
        </OnPlatform>
    </ContentPage.Resources>
    <ScrollView>
        <StackLayout Margin="{StaticResource margenes}">
            <Button Text="Do this!"
                HorizontalOptions="{StaticResource horzOptions}"
                VerticalOptions="{StaticResource vertOptions}"
                BorderWidth="{StaticResource borderWidth}"
                Rotation="{StaticResource rotationAngle}"
                TextColor="{StaticResource textColor}"
                FontSize="{StaticResource fontSize}" />
            <Button Text="Do that!"
                HorizontalOptions="{StaticResource horzOptions}"
                VerticalOptions="{StaticResource vertOptions}"
                BorderWidth="{StaticResource borderWidth}"
                Rotation="{StaticResource rotationAngle}"
                TextColor="{StaticResource textColor}"
                FontSize="{StaticResource fontSize}" />
            <Button Text="Do the other thing!"
                HorizontalOptions="{StaticResource horzOptions}"
                VerticalOptions="{StaticResource vertOptions}"
                BorderWidth="{StaticResource borderWidth}"
                Rotation="{StaticResource rotationAngle}"
                TextColor="{StaticResource textColor}"
                FontSize="{StaticResource fontSize}" />

            <Label Text="Hello, XAML!" FontFamily="Playball"
              TextColor="{x:Static local:AppConstants.ForegroundColor}"
              BackgroundColor="{x:Static local:AppConstants.BackgroundColor}"
              FontAttributes="Bold" Padding="6"
              FontSize="30" Margin="0,40,0,10"
              HorizontalOptions="Center" />
            <StackLayout Margin="10, 0">
                <Label Text="{Binding Source={x:Reference pageName},
                              StringFormat='The type of this page is {0}'}"
               FontSize="18" 
               VerticalOptions="Center"
               HorizontalTextAlignment="Center" />
                <Slider x:Name="slider"
                Maximum="360" HeightRequest="100"
                VerticalOptions="Center" />
                <Label BindingContext="{x:Reference slider}"
               Text="{Binding Value, StringFormat='{0:F0}&#x00B0; rotation'}"
               Rotation="{Binding Value}"
               FontSize="24"
               HorizontalOptions="Center"
               VerticalOptions="Center" />
            </StackLayout>
            <Label Text="&#x03C0; &#x00D7; τ sized text"
               Margin="0,100,0,10"
               FontSize="{x:Static sys:Math.PI}"
               Scale="{x:Static sys:Math.Tau}"
               HorizontalOptions="Center" />
            <ListView>
                <ListView.ItemsSource>
                    <x:Array Type="{x:Type Color}">
                        <Color>Aqua</Color>
                        <Color>Black</Color>
                        <Color>Blue</Color>
                        <Color>Fuchsia</Color>
                        <Color>Gray</Color>
                        <Color>Green</Color>
                        <Color>Lime</Color>
                        <Color>Maroon</Color>
                        <Color>Navy</Color>
                        <Color>Olive</Color>
                        <Color>Pink</Color>
                        <Color>Purple</Color>
                        <Color>Red</Color>
                        <Color>Silver</Color>
                        <Color>Teal</Color>
                        <Color>White</Color>
                        <Color>Yellow</Color>
                    </x:Array>
                </ListView.ItemsSource>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <BoxView Color="{Binding}"
                             Margin="3" />
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <ListView VerticalOptions="Start">
                <ListView.ItemsSource>
                    <x:Array Type="{x:Type local:Persona}">
                        <local:Persona Nombre="Alberto" Apellidos="García López"/>
                        <local:Persona Nombre="Luis" Apellidos="López Gutiérrez"/>
                        <local:Persona Nombre="Alberta" Apellidos="López García"/>
                        <local:Persona Nombre="Luisa" Apellidos="Gutiérrez López"/>
                    </x:Array>
                </ListView.ItemsSource>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <HorizontalStackLayout>
                                <Label FontFamily="UbuntuMono">
                                    <Label.Text>
                                        <MultiBinding StringFormat='{}{0}, {1}'>
                                            <Binding Path="Apellidos"/>
                                            <Binding Path="Nombre"/>
                                        </MultiBinding>
                                    </Label.Text>
                                </Label>
                                <!--<Label Text="{Binding Apellidos}" FontFamily="UbuntuMono"/>
                                <Label Text="{Binding Nombre}" FontAttributes="Italic"/>-->
                            </HorizontalStackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <BoxView Color="{OnPlatform Yellow, iOS=Red, Android=Green}"
                     WidthRequest="{OnPlatform 250, iOS=200, Android=300}"  
                     HeightRequest="{OnPlatform Default=250, iOS=200, Android=300}"
                     HorizontalOptions="Center" />
            <BoxView Color="{OnIdiom Yellow, Phone=Red , Tablet=Green, Desktop=Blue}"
                     WidthRequest="{OnIdiom 100, Phone=200, Tablet=300, Desktop=400}"
                     HeightRequest="{OnIdiom 100, Phone=200, Tablet=300, Desktop=400}"
                     HorizontalOptions="Center" />
            <HorizontalStackLayout HorizontalOptions="Center">
                <Image BackgroundColor="Gray" HeightRequest="50"
                   Source="{FontImage &#127919;, Size=44}" />
                <Image HeightRequest="50" HorizontalOptions="Center"
                   Source="{FontImageSource Size=44,Color={AppThemeBinding Dark=White,Light=Black}, Glyph=&#127922;}" />
                <Image BackgroundColor="Azure" HeightRequest="50"
                   Source="{FontImageSource Size=44, Color=Black, Glyph=🎮}"/>
            </HorizontalStackLayout>
            <Label Text="This text is green in light mode, and red in dark mode."
               TextColor="{AppThemeBinding Light=Green, Dark=Red}" />
        </StackLayout>
    </ScrollView>

</ContentPage>
