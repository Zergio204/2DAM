<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Restaurante.MainPage">

    <ContentPage.BindingContext>
        <local:Datos/>
    </ContentPage.BindingContext>

    <Grid RowDefinitions="100,100,100,*" BindingContext="{Binding MiRestaurante}">
        <BoxView BackgroundColor="DodgerBlue"
                 Grid.Row="0" Grid.RowSpan="2"
                 VerticalOptions="FillAndExpand"
                 HorizontalOptions="FillAndExpand"/>
        <Frame Grid.Row="1" Grid.RowSpan="2"
               CornerRadius="100" Padding="0"
               HeightRequest="200"
               WidthRequest="200"
               VerticalOptions="FillAndExpand"
               HorizontalOptions="Center"
               IsClippedToBounds="True">

            <Image Aspect="AspectFill" Source="{Binding Foto}"/>
        </Frame>
        <Label Text="{Binding Titulo}" Grid.RowSpan="2"
               Margin="20"
               HorizontalOptions="Center"
               VerticalOptions="Start"
               TextColor="White"
               FontFamily="Console"
               FontSize="Large"/>
    </Grid>

</ContentPage>
