<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Emergentes.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <HorizontalStackLayout >
                <Button x:Name="Alert" Text="DisplayAlert" Clicked="Alert_Clicked" />
                <Label x:Name="labelAlert"/>
            </HorizontalStackLayout>
            <HorizontalStackLayout>
                <Button x:Name="ActionSheet" Text="DisplayActionSheet" Clicked="ActionSheet_Clicked"/>
                <Label x:Name="labelActionSheet"/>
            </HorizontalStackLayout>
            <HorizontalStackLayout>
                <Button x:Name="PromptAsync" Text="DisplayPromptAsync" Clicked="PromptAsync_Clicked"/>
                <Label x:Name="labelPropmtAsync"/>
            </HorizontalStackLayout>
            <Button x:Name="BotonModal" Text="Página Modal" Clicked="BotonModal_Clicked"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
