<Window x:Class="WpfAppEncabezadoTextBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppEncabezadoTextBox"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <local:MiTextBox ToolTip="Nombre" MaxTexto="30" />
            <local:MiTextBox ToolTip="Apellidos" MaxTexto="30" />
            <local:MiTextBox ToolTip="Teléfono" MaxTexto="15" />
        </StackPanel>
        <Button Grid.Column="1" 
                VerticalAlignment="Bottom" HorizontalAlignment="Right" 
                Margin="20" Padding="10" Content="otra ventana"
                Click="Button_Click"/>
    </Grid>
</Window>
