<Window x:Class="WpfApp_Palabras2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_Palabras2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="grid1">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="tbPalabras" HorizontalAlignment="Center" Margin="0,10,0,0" 
                   TextWrapping="Wrap" VerticalAlignment="Top" Background="LightGreen" 
                   Height="75" Width="780" FontSize="48" TextAlignment="Center"/>

        <Button x:Name="botSiguiente" Content="Siguiente" HorizontalAlignment="Center" 
                Margin="0,91,0,0" VerticalAlignment="Top" Height="25" Width="110" 
                FontSize="16" Click="botSiguiente_Click" AutomationProperties.IsOffscreenBehavior="Offscreen"/>

        <WrapPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>

    </Grid>

</Window>
